{
  "name": "tik-forge",
  "version": "1.2.15",
  "description": "A high-performance document processing library for Node.js, built with Zig. Provides native implementations for Excel, Word, and PDF manipulation with optimized memory usage and multi-threading capabilities.",
  "main": "index.js",
  "scripts": {
    "install": "node scripts/build.js",
    "build": "npm run clean && node scripts/build.js && prebuildify --napi --strip",
    "build:only": "node scripts/build.js",
    "prebuildify": "prebuildify --napi --strip",
    "prebuild": "node scripts/build.js",
    "prebuild:upload": "prebuild --upload -t 18.0.0 -t 20.0.0",
    "clean": "rm -rf build/ zig-out/ zig-cache/ prebuilds/",
    "postinstall": "node scripts/postinstall.js",
    "test": "npm-run-all --parallel test:*",
    "test:unit": "mocha \"test/unit/**/*.test.js\" --timeout 10000 --parallel",
    "test:integration": "mocha \"test/integration/**/*.test.js\" --timeout 10000 --parallel",
    "test:coverage": "nyc --parallel mocha \"test/**/*.test.js\" --timeout 10000",
    "test:watch": "mocha --watch \"test/**/*.test.js\" --timeout 10000",
    "prepublishOnly": "npm run prebuild && npm run test"
  },
  "files": [
    "src/",
    "scripts/build.js",
    "scripts/postinstall.js",
    "binding.gyp",
    "build.zig",
    "index.js",
    "index.d.ts",
    "build/Release/tik-forge.node"
  ],
  "keywords": [
    "document",
    "excel",
    "word",
    "pdf",
    "native",
    "addon",
    "zig",
    "performance",
    "multi-threading"
  ],
  "dependencies": {
    "exceljs": "^4.4.0",
    "node-addon-api": "^7.0.0",
    "node-api-headers": "^1.0.0",
    "prebuild-install": "^7.1.1"
  },
  "devDependencies": {
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "chai": "^4.3.10",
    "prebuildify": "^5.0.1",
    "npm-run-all": "^4.1.5"
  },
  "binary": {
    "module_name": "tik-forge",
    "module_path": "build/Release",
    "host": "https://github.com/YourUsername/tik-forge/releases/download/",
    "remote_path": "{version}"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HakimIno/tik-forge.git"
  },
  "cpu": [
    "x64",
    "arm64"
  ],
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "gypfile": true,
  "author": "weerachit utnok",
  "license": "MIT",
  "types": "index.d.ts",
  "directories": {
    "test": "test"
  },
  "bugs": {
    "url": "https://github.com/HakimIno/tik-forge/issues"
  },
  "homepage": "https://github.com/HakimIno/tik-forge#readme",
  "engines": {
    "node": ">=18.0.0 <21.0.0",
    "zig": ">=0.13.0 <0.14.0"
  },
  "config": {
    "cache": true,
    "cache-min": "999999999"
  }
}
