{
  "name": "tik-forge",
  "version": "1.2.10",
  "description": "A high-performance document processing library for Node.js, built with Zig. Provides native implementations for Excel, Word, and PDF manipulation with optimized memory usage and multi-threading capabilities.",
  "main": "index.js",
  "scripts": {
    "preinstall": "node scripts/get-node-info.js",
    "install": "prebuild-install || node scripts/build.js",
    "build": "node scripts/build.js",
    "prebuildify": "node scripts/build.js && prebuildify --napi --strip",
    "prebuild": "prebuildify --napi --strip -t 18.0.0 -t 20.0.0",
    "prebuild:upload": "prebuild --upload",
    "clean": "rm -rf build/ zig-out/ zig-cache/",
    "postinstall": "node scripts/postinstall.js",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "mocha \"test/unit/**/*.test.js\" --timeout 10000",
    "test:integration": "mocha \"test/integration/**/*.test.js\" --timeout 10000",
    "test:coverage": "nyc mocha \"test/**/*.test.js\" --timeout 10000",
    "debug": "NODE_DEBUG=module node --napi-modules ./index.js"
  },
  "files": [
    "src/",
    "scripts/",
    "binding.gyp",
    "build.zig",
    "index.js",
    "index.d.ts",
    "scripts/get-node-info.js"
  ],
  "keywords": [
    "document",
    "excel",
    "word",
    "pdf",
    "native",
    "addon",
    "zig",
    "performance",
    "multi-threading"
  ],
  "dependencies": {
    "exceljs": "^4.4.0"
  },
  "devDependencies": {
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "chai": "^4.3.10"
  },
  "binary": {
    "module_path": "zig-out/lib",
    "module_name": "tik-forge"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HakimIno/tik-forge.git"
  },
  "cpu": [
    "x64",
    "arm64"
  ],
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "gypfile": true,
  "author": "weerachit utnok",
  "license": "MIT",
  "types": "index.d.ts",
  "directories": {
    "test": "test"
  },
  "bugs": {
    "url": "https://github.com/HakimIno/tik-forge/issues"
  },
  "homepage": "https://github.com/HakimIno/tik-forge#readme",
  "engines": {
    "node": ">=18.0.0",
    "zig": "0.13.0"
  }
}
